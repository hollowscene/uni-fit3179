{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple radial chart with embedded data.",
    "title": "Carbon Emission Share by Income (2020)",

    "data": {"url": "data/owid-co2-data.csv"},
    "transform": [{
        "filter": {
          "field": "country", 
          "oneOf": ["Low-income countries", "Lower-middle-income countries", "Upper-middle-income countries", "High-income countries"]
        }
    }, {
        "filter": "datum.year == 2020"
    }],

    "hconcat": [{
        "mark": {"type": "arc", "innerRadius": 150, "stroke": "#fff", "tooltip": true},
        "encoding": {
            "theta": {"field": "co2", "type": "quantitative", "stack": true},
            "radius": {"field": "co2", "scale": {"type": "sqrt", "zero": true, "rangeMin": 75}},
            "color": {"field": "country", "type": "nominal", "legend": true}
        }
    }, {
        "layer": [{
            "mark": {"type": "arc", "innerRadius": 150, "stroke": "#fff", "tooltip": true}
          }],
          "encoding": {
            "theta": {"field": "co2_per_capita", "type": "quantitative", "stack": true},
            "radius": {"field": "co2_per_capita", "scale": {"type": "sqrt", "zero": true, "rangeMin": 75}},
            "color": {"field": "country", "type": "nominal", "legend": null}
          }
    }]
}