{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global CO2 Per Capita Emissions",

  "width": 1000,
  "height": 400,
  "projection": {"type": "equalEarth"},

  "params": [
    {
      "name": "Select_Year",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1800,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],

  "data": {
    "url": "data/owid-co2-data.csv"
  },

  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "lightsteelblue"}
    },
    {
      "data": {
        "url": "data/world_map_countries_110scale_30graticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "lightsteelblue",
        "strokeWidth": 0.5
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "iso_code",
          "from": {
            "data": {
              "url": "data/world_map_countries_110scale_30graticules.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.ISO_A3_EH"
          },
          "as": "geo"
        },
        {"filter": "datum.year == Select_Year"}
      ],
      "mark": {
        "type": "geoshape", "stroke": "lightsteelblue", "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "co2_per_capita",
          "type": "quantitative",
          "scale": {
            "domain": [0, 2.5, 7.5, 15, 25],
            "range": ["#feedde", "#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "population", "type": "quantitative", "title": "Population", "format": ","},
          {"field": "co2_per_capita", "type": "quantitative", "title": "CO2 per capita (Tonnes)", "format": ".2f"}
        ]
      }
    }, {
      "layer": [{
        "mark": {"type": "circle", "opacity": 1, "size": 15}
      }, {
        "transform": [
          {
            "window": [{"op": "rank", "as": "ranking"}],
            "sort": [{"field": "co2_per_capita", "order": "descending"}]
          },
          {"filter": "datum.ranking == 1"},
          {
            "calculate": "'Worst per capita emitter:;' + datum['country'] + ' (' + datum['co2_per_capita'] + ')'",
            "as": "text_annotation_raw"
          },
          {
            "calculate": "split(datum.text_annotation_raw, ';')",
            "as": "text_annotation"
          }
        ],
        "mark": {
          "type": "text",
          "align": "right",
          "dx": -8,
          "dy": -8,
          "baseline": "middle",
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "text_annotation"},
          "longitude": {"field": "Longitude_(average)", "type": "quantitative"},
          "latitude": {"field": "Latitude_(average)", "type": "quantitative"}
        }
    }]
  }, {
    "data": {
      "url": "data/world_map_countries_110scale_30graticules.topojson",
      "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
    },
    "mark": {"type": "geoshape", "fill": null, "stroke": "Gainsboro"}
    }
  ]
}